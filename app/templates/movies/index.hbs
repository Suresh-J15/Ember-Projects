{{#if this.presentRoute}}

<div class="container-fluid">
  {{outlet}}

  {{#each this.model as |movie|}}
  <MovieListItem @model={{movie}} onclick={{action "seeMovieItem" movie.id}}>
  </MovieListItem>
  {{/each}}

</div>

{{else}}

<div class="row g-0">
  <div class="col-lg-6 d-none d-lg-block mx-2">

    {{#each this.model as |movie|}}
    <MovieListItem @model={{movie}} onclick={{action "seeMovieItem" movie.id}}>
    </MovieListItem>
    {{/each}}

  </div>

  <div
    class="position-fixed top-20 end-0 bottom-0 overflow-scroll col-11 col-lg-5 my-3 px-2 rounded-3 border border-dark">
    {{outlet}}
  </div>
</div>

{{/if}}


