{{!-- template-lint-disable block-indentation --}}

{{#if this.model}}
<MovieItem @close={{action "close" }} @model={{this.model}}></MovieItem>
<div class="d-flex justify-content-center gap-3 mb-5">
  <button class="py-2 px-4 btn btn-danger" type="button" data-bs-toggle="modal"
    data-bs-target="#confirmDialog">Delete</button>
  <button class="py-2 px-4 btn btn-success" {{action "moveToEditPage" }}>Edit</button>
</div>
{{/if}}

<ConfirmDialog id="confirmDialog" @title={{this.model.movieTitle}} @dialogBody={{"Are you sure, you want to delete this
  movie item?"}}>
  <button class="btn btn-success" type="submit" data-bs-dismiss="modal" {{action "deleteMovieItem" }}>Confirm</button>
</ConfirmDialog>

{{outlet}}